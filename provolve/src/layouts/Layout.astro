---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "A student-led platform exploring medicine, innovation, and healthcare challenges." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Provolve Blog</title>
  </head>
  <body class="min-h-screen bg-white">
    <header class="border-b">
      <nav class="container mx-auto px-4 py-4">
        <a href="/" class="text-2xl font-bold">Provolve Blog</a>
      </nav>
    </header>
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="border-t mt-16 py-8">
      <div class="container mx-auto px-4 text-center text-gray-600">
        <p>&copy; {new Date().getFullYear()} Provolve. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

