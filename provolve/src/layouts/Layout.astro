---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "A student-led platform exploring medicine, innovation, and healthcare challenges." } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Provolve Blog</title>
    <style>
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      .gradient-bg {
        background: linear-gradient(-45deg, #667eea, #764ba2, #f093fb, #4facfe);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
      }
      @keyframes gradient {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }
      .glass-effect {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }
      
      /* Teleportation overlay styles */
      #teleport-overlay,
      #teleport-entry {
        will-change: transform, opacity;
      }
      
      .teleport-circle,
      .teleport-entry-circle {
        will-change: width, height, opacity;
        transform-origin: center;
      }
    </style>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-purple-50 via-blue-50 to-indigo-50">
    <!-- Animated Background Decorations -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none -z-10">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-float"></div>
      <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-blue-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-float" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-0 left-1/2 w-96 h-96 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-float" style="animation-delay: 4s;"></div>
    </div>

    <header class="sticky top-0 z-50 backdrop-blur-md bg-white/80 border-b border-gray-200/50 shadow-sm">
      <nav class="container mx-auto px-4 py-4">
        <a href="/" class="text-2xl font-bold bg-gradient-to-r from-purple-600 via-blue-600 to-indigo-600 bg-clip-text text-transparent hover:scale-105 transition-transform duration-300 inline-block animate-fade-in-down">
          Provolve Blog
        </a>
      </nav>
    </header>
    <main class="container mx-auto px-4 py-8 relative z-10">
      <slot />
    </main>
    <footer class="mt-16 py-8 border-t border-gray-200/50 backdrop-blur-sm bg-white/50">
      <div class="container mx-auto px-4 text-center">
        <p class="text-gray-600 animate-fade-in">
          &copy; {new Date().getFullYear()} Provolve. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>

