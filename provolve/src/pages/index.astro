---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import BlogPost from '../components/BlogPost.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => 
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Provolve Blog">
  <main class="animate-fade-in">
    <!-- Hero Section -->
    <section class="relative mb-20 mt-8 overflow-hidden">
      <div class="relative z-10 max-w-4xl mx-auto text-center px-4">
        <h1 class="text-6xl md:text-7xl font-extrabold mb-6 animate-fade-in-down">
          <span class="bg-gradient-to-r from-purple-600 via-blue-600 to-indigo-600 bg-clip-text text-transparent">
            Provolve Blog
          </span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-700 mb-8 animate-fade-in-up" style="animation-delay: 0.2s;">
          Exploring medicine, innovation, and healthcare challenges
        </p>
        <div class="flex justify-center gap-4 animate-fade-in-up" style="animation-delay: 0.4s;">
          <a href="#posts" class="px-8 py-3 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-full font-semibold hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-xl">
            Explore Posts
          </a>
        </div>
      </div>
      
      <!-- Animated decorative elements -->
      <div class="absolute top-10 left-10 w-20 h-20 bg-purple-300 rounded-full opacity-20 animate-float"></div>
      <div class="absolute top-20 right-20 w-16 h-16 bg-blue-300 rounded-full opacity-20 animate-float" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-10 left-1/3 w-12 h-12 bg-indigo-300 rounded-full opacity-20 animate-float" style="animation-delay: 2s;"></div>
    </section>

    <!-- Blog Posts Section -->
    <section id="posts" class="mb-16">
      <h2 class="text-4xl font-bold mb-12 text-center animate-fade-in-up">
        <span class="bg-gradient-to-r from-purple-600 to-indigo-600 bg-clip-text text-transparent">
          Latest Articles
        </span>
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedPosts.map((post, index) => (
          <div class="animate-fade-in-up" style={`animation-delay: ${index * 0.1}s;`}>
            <BlogPost post={post} />
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>

