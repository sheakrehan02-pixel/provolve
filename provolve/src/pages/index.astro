---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import BlogPost from '../components/BlogPost.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => 
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Provolve Blog">
  <main class="animate-fade-in">
    <!-- Hero Section -->
    <section class="relative mb-20 mt-12 overflow-hidden">
      <div class="relative z-10 max-w-4xl mx-auto text-center px-4">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 text-truffle-dark-brown animate-fade-in-down tracking-tight">
          Provolve Blog
        </h1>
        <p class="text-xl md:text-2xl text-truffle-brown mb-10 animate-fade-in-up leading-relaxed" style="animation-delay: 0.2s;">
          Exploring medicine, innovation, and healthcare challenges
        </p>
        <a href="#posts" class="inline-block px-8 py-3 bg-truffle-caramel text-truffle-cream rounded-full font-medium hover:bg-truffle-brown transition-colors duration-200 animate-fade-in-up" style="animation-delay: 0.4s;">
          Explore Posts
        </a>
      </div>
    </section>

    <!-- Blog Posts Section -->
    <section id="posts" class="mb-16">
      <h2 class="text-3xl font-semibold mb-12 text-truffle-dark-brown text-center">
        Latest Articles
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedPosts.map((post, index) => (
          <div class="animate-fade-in-up" style={`animation-delay: ${index * 0.08}s;`}>
            <BlogPost post={post} />
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>

