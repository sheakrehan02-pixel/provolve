---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import BlogPost from '../components/BlogPost.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => 
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Provolve Blog">
  <main class="animate-fade-in opacity-0" style="animation: fadeIn 0.6s ease-out 0.2s forwards;">
    <!-- Hero Section -->
    <section class="relative mb-24 mt-8 overflow-hidden">
      <div class="max-w-3xl">
        <p class="text-sm font-medium text-truffle-caramel uppercase tracking-[0.2em] mb-6 animate-fade-in-up opacity-0" style="animation: fadeInUp 0.7s cubic-bezier(0.22,1,0.36,1) 0.1s forwards;">
          Medicine · Innovation · Research
        </p>
        <h1 class="font-serif text-5xl md:text-6xl lg:text-7xl font-semibold text-truffle-dark-brown leading-[1.1] tracking-tight mb-8 animate-fade-in-up opacity-0" style="animation: fadeInUp 0.7s cubic-bezier(0.22,1,0.36,1) 0.2s forwards;">
          Exploring the future of healthcare
        </h1>
        <p class="text-xl md:text-2xl text-truffle-brown/90 leading-relaxed mb-12 max-w-2xl animate-fade-in-up opacity-0" style="animation: fadeInUp 0.7s cubic-bezier(0.22,1,0.36,1) 0.3s forwards;">
          A student-led platform breaking down complex medical topics into clear, actionable insights.
        </p>
        <a href="#posts" class="inline-flex items-center gap-2 px-8 py-4 bg-truffle-dark-brown text-truffle-cream font-medium rounded-full hover:bg-truffle-caramel transition-all duration-300 animate-fade-in-up opacity-0 group" style="animation: fadeInUp 0.7s cubic-bezier(0.22,1,0.36,1) 0.4s forwards;">
          Read the latest
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
      <!-- Decorative divider -->
      <div class="mt-20 flex items-center gap-4">
        <div class="h-px flex-1 bg-gradient-to-r from-transparent to-truffle-brown/20"></div>
        <span class="text-truffle-brown/30 text-2xl">◆</span>
        <div class="h-px flex-1 bg-gradient-to-l from-transparent to-truffle-brown/20"></div>
      </div>
    </section>

    <!-- Blog Posts Section -->
    <section id="posts" class="mb-24">
      <div class="flex items-baseline justify-between gap-4 mb-16">
        <h2 class="font-serif text-3xl md:text-4xl font-semibold text-truffle-dark-brown">
          Latest Articles
        </h2>
        <span class="text-sm text-truffle-brown/60">{sortedPosts.length} posts</span>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10 lg:gap-12">
        {sortedPosts.map((post, index) => (
          <div class="animate-fade-in-up opacity-0" style={`animation: fadeInUp 0.7s cubic-bezier(0.22,1,0.36,1) ${0.1 + index * 0.08}s forwards;`}>
            <BlogPost post={post} />
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>

