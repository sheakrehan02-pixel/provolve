---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import BlogPost from '../components/BlogPost.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) =>
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Provolve Blog" description="Evidence-based articles on medicine, research, and healthcare innovation for students and curious minds." canonicalURL="https://provolve.net/">
  <main>
    <!-- Hero: tight → loose rhythm -->
    <section class="mb-16 sm:mb-20">
      <p class="text-xs font-medium text-truffle-caramel/90 uppercase tracking-widest mb-4 animate-fade-in opacity-0" style="animation: fadeIn 0.5s ease-out 0.1s forwards;">
        Medicine · Research · Healthcare
      </p>
      <h1 class="font-serif text-3xl sm:text-4xl md:text-[2.75rem] font-semibold text-truffle-dark-brown leading-[1.2] mb-5 max-w-[28ch] animate-fade-in-up opacity-0" style="animation: fadeInUp 0.5s cubic-bezier(0.22,1,0.36,1) 0.15s forwards;">
        Helping students understand medicine and research
      </h1>
      <p class="text-lg text-truffle-brown/85 leading-relaxed max-w-[42ch] mb-8 animate-fade-in-up opacity-0" style="animation: fadeInUp 0.5s cubic-bezier(0.22,1,0.36,1) 0.2s forwards;">
        Clear, evidence-based articles on healthcare and under-researched topics—for students and lifelong learners.
      </p>
      <a href="#posts" class="inline-flex items-center gap-2 text-sm font-medium text-truffle-caramel hover:text-truffle-brown transition-colors duration-200 animate-fade-in opacity-0 link-underline" style="animation: fadeIn 0.5s ease-out 0.3s forwards;">
        Read the latest
        <span aria-hidden="true">→</span>
      </a>
      <!-- Soft divider -->
      <div class="mt-12 pt-8 border-t border-truffle-brown/10"></div>
    </section>

    <!-- Posts -->
    <section id="posts" class="scroll-reveal">
      <div class="flex items-baseline justify-between gap-4 mb-10">
        <h2 class="font-serif text-2xl font-semibold text-truffle-dark-brown">
          Latest articles
        </h2>
        <span class="text-xs text-truffle-brown/50">{sortedPosts.length} posts</span>
      </div>
      <ul class="space-y-6 sm:space-y-8">
        {sortedPosts.map((post, index) => (
          <li class="scroll-reveal" style={`animation-delay: ${index * 0.06}s`}>
            <BlogPost post={post} />
          </li>
        ))}
      </ul>
    </section>
  </main>

  <style>
    .scroll-reveal {
      opacity: 0;
      transform: translateY(14px);
      animation: scrollReveal 0.55s cubic-bezier(0.22, 1, 0.36, 1) forwards;
    }
    @keyframes scrollReveal {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</Layout>
