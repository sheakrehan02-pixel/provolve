---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
---

<a href={`/blog/${post.slug}/`} class="group block h-full">
  <article class="relative overflow-hidden rounded-xl bg-white/70 backdrop-blur-sm border border-truffle-brown/15 p-6 h-full transition-all duration-200 hover:border-truffle-caramel/30 hover:shadow-lg hover:shadow-truffle-brown/5">
    <div class="relative z-10">
      <span class="inline-block px-3 py-1 text-xs font-medium text-truffle-caramel bg-truffle-caramel/10 rounded-full mb-4">
        {post.data.pubDate.toLocaleDateString('en-US', {
          month: 'short',
          day: 'numeric',
          year: 'numeric',
        })}
      </span>
      
      <h2 class="text-xl font-semibold mb-3 text-truffle-dark-brown group-hover:text-truffle-caramel transition-colors duration-200">
        {post.data.title}
      </h2>
      
      <p class="text-truffle-brown/90 mb-4 line-clamp-3 leading-relaxed text-[15px]">
        {post.data.description}
      </p>
      
      <span class="inline-flex items-center text-sm font-medium text-truffle-caramel group-hover:text-truffle-brown transition-colors duration-200">
        Read more
        <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </span>
    </div>
  </article>
</a>
